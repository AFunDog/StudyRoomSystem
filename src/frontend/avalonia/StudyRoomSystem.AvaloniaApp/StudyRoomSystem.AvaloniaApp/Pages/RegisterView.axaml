<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:shadUi="clr-namespace:ShadUI;assembly=ShadUI"
             xmlns:vm="clr-namespace:StudyRoomSystem.AvaloniaApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="800"
             x:DataType="vm:RegisterViewModel"
             x:Class="StudyRoomSystem.AvaloniaApp.Pages.RegisterView">
    <Panel>
        <Grid ColumnDefinitions="1*,12*,1*">
            <shadUi:Card Grid.Column="1" VerticalAlignment="Center" MaxWidth="576">
                <shadUi:Card.Header>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="注册" FontSize="24" LetterSpacing="4"></TextBlock>
                        <TextBlock Text="欢迎来到智慧自习室预约管理系统" Classes="Muted"></TextBlock>
                    </StackPanel>
                </shadUi:Card.Header>
                <StackPanel Orientation="Vertical" >
                    <TextBox shadUi:ControlAssist.Label="用户名" Watermark="请输入用户名" Text="{Binding UserName}"></TextBox>
                    <TextBox shadUi:ControlAssist.Label="密码" Watermark="请输入密码" PasswordChar="*" Classes="PasswordReveal" Text="{Binding Password}"/>
                    <TextBox shadUi:ControlAssist.Label="学号/工号" Watermark="请输入学号/工号" Text="{Binding CampusId}"></TextBox>
                    <TextBox shadUi:ControlAssist.Label="手机号" Watermark="请输入手机号" Text="{Binding Phone}"></TextBox>
                    <CheckBox Content="我已阅读并同意"></CheckBox>
                    <CheckBox Content="下次自动登录"></CheckBox>
                    <Button Content="注册" Classes="Primary" shadUi:ButtonAssist.ShowProgress="{Binding RegisterCommand.IsRunning}" Command="{Binding RegisterCommand}"></Button>
                    <StackPanel Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                        <StackPanel.Styles>
                            <Style Selector=":is(Control).Link">
                                <Setter Property="Cursor" Value="Hand"></Setter>
                            </Style>
                        </StackPanel.Styles>
                        <Button Classes="Link" Content="返回登录" Command="{Binding BackToLoginViewCommand }">
                        </Button>
                        <!-- <TextBlock Text="|"></TextBlock> -->
                        <!-- <TextBlock Classes="Link" Text="新用户注册" /> -->
                    </StackPanel>
                </StackPanel>
            </shadUi:Card>
        </Grid>
    </Panel>
</UserControl>